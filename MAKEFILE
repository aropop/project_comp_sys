release: GAME.ASM VIDEO.OBJ RAND.OBJ KEYB.OBJ SPRITES.OBJ DRAWP.OBJ
	ML /W3 /WX VIDEO.OBJ RAND.OBJ KEYB.OBJ SPRITES.OBJ DRAWP.OBJ GAME.ASM /Fe GAME.EXE

debug: GAME.ASM VIDEOD.OBJ RANDD.OBJ KEYBD.OBJ SPRITESD.OBJ DRAWPROCSD.OBJ
	ML /Zi /W3 /WX VIDEOD.OBJ RANDD.OBJ KEYBD.OBJ SPRITESD.OBJ DRAWPROCSD.OBJ GAME.ASM /Fe GAMED.EXE

VIDEO.OBJ: VIDEO.ASM
	ML /c /W3 /WX /FoVIDEO.OBJ /Ta VIDEO.ASM
	
VIDEOD.OBJ: VIDEO.ASM
	ML /c /Zi /W3 /WX /FoVIDEOD.OBJ /Ta VIDEO.ASM
	
RAND.OBJ: RAND.ASM
	ML /c /W3 /WX /FoRAND.OBJ /Ta RAND.ASM
	
RANDD.OBJ: RAND.ASM
	ML /c /Zi /W3 /WX /FoRANDD.OBJ /Ta RAND.ASM
	
KEYB.OBJ: KEYB.ASM
	ML /c /W3 /WX /FoKEYB.OBJ /Ta KEYB.ASM
	
KEYBD.OBJ: KEYB.ASM
	ML /c /Zi /W3 /WX /FoKEYBD.OBJ /Ta KEYB.ASM

SPRITES.OBJ: SPRITES.ASM
	ML /c /W3 /WX /FoSPRITES.OBJ /Ta SPRITES.ASM
	
SPRITESD.OBJ: SPRITES.ASM
	ML /c /Zi /W3 /WX /FoSPRITESD.OBJ /Ta SPRITES.ASM

DRAWP.OBJ: DRAWP.ASM
	ML /c /W3 /WX /FoDRAWP.OBJ /Ta DRAWP.ASM
	
DRAWPROCSD.OBJ: DRAWPP.ASM
	ML /c /Zi /W3 /WX /FoDRAWPROCSD.OBJ /Ta DRAWP.ASM

clean:
	del *.EXE
	del *.OBJ

cv: debug
	cv /s /43 GAMED.EXE
