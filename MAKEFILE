release: DRAWING.ASM VIDEO.OBJ RAND.OBJ KEYB.OBJ SPRITES.OBJ
	ML /W3 /WX VIDEO.OBJ RAND.OBJ KEYB.OBJ SPRITES.OBJ DRAWING.ASM /Fe DRAWING.EXE

debug: DRAWING.ASM VIDEOD.OBJ RANDD.OBJ KEYBD.OBJ SPRITESD.OBJ
	ML /Zi /W3 /WX VIDEOD.OBJ RANDD.OBJ KEYBD.OBJ SPRITESD.OBJ DRAWING.ASM /Fe DRAWINGD.EXE

VIDEO.OBJ: VIDEO.ASM
	ML /c /W3 /WX /FoVIDEO.OBJ /Ta VIDEO.ASM
	
VIDEOD.OBJ: VIDEO.ASM
	ML /c /Zi /W3 /WX /FoVIDEOD.OBJ /Ta VIDEO.ASM
	
RAND.OBJ: RAND.ASM
	ML /c /W3 /WX /FoRAND.OBJ /Ta RAND.ASM
	
RANDD.OBJ: RAND.ASM
	ML /c /Zi /W3 /WX /FoRANDD.OBJ /Ta RAND.ASM
	
KEYB.OBJ: KEYB.ASM
	ML /c /W3 /WX /FoKEYB.OBJ /Ta KEYB.ASM
	
KEYBD.OBJ: KEYB.ASM
	ML /c /Zi /W3 /WX /FoKEYBD.OBJ /Ta KEYB.ASM

SPRITES.OBJ: KEYB.ASM
	ML /c /W3 /WX /FoSPRITES.OBJ /Ta SPRITES.ASM
	
SPRITESD.OBJ: KEYB.ASM
	ML /c /Zi /W3 /WX /FoSPRITESD.OBJ /Ta SPRITES.ASM

clean:
	del *.EXE
	del *.OBJ

cv: debug
	cv /s /43 DRAWINGD.EXE
